<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="YOGESH CHOUDHARY"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_pic" />

    <TextView
        android:id="@+id/user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:maxWidth="200dp"
        android:maxLines="4"
        android:text="YOU ARE THE BEST BUT IM DIFFERENT \n IN EVERY FIELD U THOUGH"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_name" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/user_profile_board"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_status" />

    <TextView
        android:id="@+id/postonboard"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:text="post on board"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postonboard"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/user_followers"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="321"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/follower_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_followers"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="followers"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/user_following"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="51"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/follwing_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_following"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="following"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/user_accepted"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:layout_below="@+id/follower_text"
            android:text="42"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_accepted"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:text="Accepted"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/user_given"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/follwing_text"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="13"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_given"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="Given"
            android:textSize="12sp" />


    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
